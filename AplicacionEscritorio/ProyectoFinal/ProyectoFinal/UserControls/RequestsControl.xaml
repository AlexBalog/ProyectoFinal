<UserControl x:Class="ProyectoFinal.UserControls.RequestsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:ProyectoFinal.UserControls"
             xmlns:viewmodels="clr-namespace:ProyectoFinal.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200">

    <UserControl.DataContext>
        <viewmodels:RequestsViewModel/>
    </UserControl.DataContext>

    <UserControl.Resources>
        <!-- Colores y estilos base -->
        <Color x:Key="PrimaryColor">#8A2BE2</Color>
        <Color x:Key="BackgroundColor">#121212</Color>
        <Color x:Key="SurfaceColor">#1E1E1E</Color>
        <Color x:Key="TextColorPrimary">#FFFFFF</Color>
        <Color x:Key="TextColorSecondary">#E0E0E0</Color>
        <Color x:Key="AccentColor">#333333</Color>
        <Color x:Key="SuccessColor">#4CAF50</Color>
        <Color x:Key="WarningColor">#FF9800</Color>

        <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
        <SolidColorBrush x:Key="TextBrushPrimary" Color="{StaticResource TextColorPrimary}"/>
        <SolidColorBrush x:Key="TextBrushSecondary" Color="{StaticResource TextColorSecondary}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource SuccessColor}"/>
        <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource WarningColor}"/>

        <!-- Convertidor -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Estilos reutilizables -->
        <Style x:Key="FilterTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrushPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para ComboBox CORREGIDO -->
        <Style x:Key="FilterComboBox" TargetType="ComboBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrushPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                  Background="{TemplateBinding Background}"
                                  BorderBrush="{TemplateBinding BorderBrush}"
                                  BorderThickness="{TemplateBinding BorderThickness}"
                                  Focusable="False"
                                  IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                  ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="5">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <Path Grid.Column="1" 
                                              HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"
                                              Data="M 0 0 L 4 4 L 8 0 Z" 
                                              Fill="{StaticResource TextBrushSecondary}"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>

                            <!-- TextBox editable agregado -->
                            <TextBox x:Name="PART_EditableTextBox"
                                     Visibility="Hidden"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Margin="10,0,25,0"
                                     VerticalAlignment="Center"
                                     Foreground="{StaticResource TextBrushPrimary}"
                                     IsReadOnly="{TemplateBinding IsReadOnly}"/>

                            <ContentPresenter x:Name="ContentSite"
                                      IsHitTestVisible="False"
                                      Content="{TemplateBinding SelectionBoxItem}"
                                      ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                      ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                      Margin="10,0,25,0"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"/>

                            <Popup x:Name="Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Slide">
                                <Grid MaxHeight="200" MinWidth="{TemplateBinding ActualWidth}">
                                    <Border Background="{StaticResource SurfaceBrush}"
                                    BorderBrush="{StaticResource AccentBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5">
                                        <ScrollViewer>
                                            <StackPanel IsItemsHost="True"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <!-- Triggers corregidos -->
                            <Trigger Property="IsEditable" Value="true">
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryBrush}"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para ComboBoxItem -->
        <Style x:Key="ComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrushPrimary}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border Background="{TemplateBinding Background}"
                        Padding="{TemplateBinding Padding}">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilos para botones de acción -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Width" Value="30"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ViewButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1976D2"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ApproveButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#388E3C"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="RejectButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F57C00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FilterButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#9C27B0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para DataGrid Headers -->
        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrushPrimary}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
        </Style>

        <!-- Estilo para DataGrid -->
        <Style x:Key="ModernDataGrid" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrushPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="AlternatingRowBackground" Value="#252525"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{StaticResource AccentBrush}"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource DataGridColumnHeaderStyle}"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Filtros -->
            <RowDefinition Height="Auto"/>
            <!-- Header con estadísticas -->
            <RowDefinition Height="*"/>
            <!-- DataGrid -->
            <RowDefinition Height="Auto"/>
            <!-- Loading/Status -->
        </Grid.RowDefinitions>

        <!-- Panel de Filtros -->
        <Border Grid.Row="0" Background="{StaticResource SurfaceBrush}" 
                CornerRadius="5" Padding="20" Margin="0,0,0,20">
            <StackPanel>
                <TextBlock Text="🔍 Filtros de Búsqueda" 
                           FontSize="16" FontWeight="SemiBold"
                           Foreground="{StaticResource TextBrushPrimary}"
                           Margin="0,0,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filtros -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Nombre del Entrenamiento" Foreground="{StaticResource TextBrushSecondary}" 
                                   FontSize="12" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource FilterTextBox}"
                                 Text="{Binding FilterNombre, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="5,0">
                        <TextBlock Text="Creador" Foreground="{StaticResource TextBrushSecondary}" 
                                   FontSize="12" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource FilterTextBox}"
                                 Text="{Binding FilterCreador, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="5,0,5,0">
                        <TextBlock Text="Categoría" Foreground="{StaticResource TextBrushSecondary}" 
                                   FontSize="12" Margin="0,0,0,5"/>
                        <ComboBox Style="{StaticResource FilterComboBox}"
                                  ItemContainerStyle="{StaticResource ComboBoxItemStyle}"
                                  SelectedItem="{Binding FilterCategoria}">
                            <ComboBox.Items>
                                <system:String xmlns:system="clr-namespace:System;assembly=mscorlib">Todas</system:String>
                                <system:String xmlns:system="clr-namespace:System;assembly=mscorlib">Fuerza</system:String>
                                <system:String xmlns:system="clr-namespace:System;assembly=mscorlib">Cardio</system:String>
                                <system:String xmlns:system="clr-namespace:System;assembly=mscorlib">Flexibilidad</system:String>
                                <system:String xmlns:system="clr-namespace:System;assembly=mscorlib">HIIT</system:String>
                                <system:String xmlns:system="clr-namespace:System;assembly=mscorlib">Yoga</system:String>
                            </ComboBox.Items>
                        </ComboBox>
                    </StackPanel>

                    <!-- Botones de filtro -->
                    <StackPanel Grid.Column="3" Orientation="Horizontal" 
                                VerticalAlignment="Bottom" Margin="10,0,0,0">
                        <Button Content="🔍 Buscar" Style="{StaticResource FilterButton}"
                                Command="{Binding ApplyFiltersCommand}" Margin="0,0,10,0"/>
                        <Button Content="🗑️ Limpiar" Style="{StaticResource FilterButton}"
                                Command="{Binding ClearFiltersCommand}"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Header con estadísticas -->
        <Grid Grid.Row="1" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="📝" FontSize="16" Margin="0,0,10,0"/>
                <TextBlock Text="{Binding StatusText}" 
                           FontSize="14" 
                           Foreground="{StaticResource TextBrushSecondary}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="1" 
                    Content="🔄 Actualizar Lista" 
                    Style="{StaticResource FilterButton}"
                    Command="{Binding RefreshCommand}"/>
        </Grid>

        <!-- DataGrid -->
        <DataGrid Grid.Row="2" 
                  Style="{StaticResource ModernDataGrid}"
                  ItemsSource="{Binding Peticiones}"
                  SelectedItem="{Binding SelectedRequest}">
            <DataGrid.Columns>
                <!-- ID -->
                <DataGridTextColumn Header="ID" Binding="{Binding _id}" Width="80"/>

                <!-- Nombre -->
                <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" Width="250"/>

                <!-- Categoría -->
                <DataGridTextColumn Header="Categoría" Binding="{Binding categoria}" Width="120"/>

                <!-- Creador -->
                <DataGridTextColumn Header="Creador" Binding="{Binding creador}" Width="150"/>

                <!-- Músculo Principal -->
                <DataGridTextColumn Header="Músculo Principal" Binding="{Binding musculoPrincipal}" Width="140"/>

                <!-- Duración -->
                <DataGridTextColumn Header="Duración" Binding="{Binding DuracionTexto}" Width="100"/>

                <!-- Likes -->
                <DataGridTextColumn Header="Likes" Binding="{Binding likes}" Width="70"/>

                <!-- Acciones -->
                <DataGridTemplateColumn Header="Acciones" Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Button Style="{StaticResource ViewButton}" 
                                        Content="👁️" ToolTip="Ver Detalles"
                                        Command="{Binding DataContext.ViewDetailsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>

                                <Button Style="{StaticResource ApproveButton}" 
                                        Content="✅" ToolTip="Aprobar Rápido"
                                        Command="{Binding DataContext.QuickApproveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>

                                <Button Style="{StaticResource RejectButton}" 
                                        Content="❌" ToolTip="Rechazar Rápido"
                                        Command="{Binding DataContext.QuickRejectCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Loading/Status -->
        <Border Grid.Row="3" Background="{StaticResource SurfaceBrush}" 
                CornerRadius="5" Padding="15" Margin="0,15,0,0"
                Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <TextBlock Text="⏳" FontSize="16" Margin="0,0,10,0"/>
                <TextBlock Text="Cargando peticiones..." 
                           Foreground="{StaticResource TextBrushSecondary}"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>